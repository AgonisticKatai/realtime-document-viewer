{
  "name": "document-management-system",
  "version": "0.1.0",
  "description": "Real-time document management application",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build",
    "dev": "vite",
    "lint:all": "npm run lint && npm run lint:css",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint": "eslint . --ext .ts",
    "preview": "vite preview",
    "server": "cd server && go run server.go",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test": "vitest"
  },
  "keywords": [
    "documents",
    "websocket",
    "typescript"
  ],
  "author": "Nacho Torrella",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@types/jsdom": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-plugin-import-x": "^4.16.1",
    "jsdom": "^27.0.0",
    "stylelint": "^16.24.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "typescript": "^5.9.3",
    "vite": "^6.3.6",
    "vitest": "^3.2.4"
  }
}
